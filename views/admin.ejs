  <script src="/js/app.js"></script>
  <script>
    let selectedFile = null;
    let parsedData = null;

    document.addEventListener('DOMContentLoaded', () => {
      loadStats();
      loadCollections();
      loadSettings();
      setupDragDrop();
    });

    async function loadStats() {
      try {
        const res = await fetch('/api/admin/stats');
        const stats = await res.json();

        document.getElementById('statCollections').textContent = stats.collections;
        document.getElementById('statDocuments').textContent = stats.documents.toLocaleString();
        document.getElementById('statDataSize').textContent = formatBytes(stats.dataSize);
        document.getElementById('statIndexes').textContent = stats.indexes;
      } catch (error) {
        console.error('Failed to load stats:', error);
      }
    }

    // Collections that support file attachments
    const collectionsWithAttachments = ['managertasks', 'releases'];

    async function loadCollections() {
      try {
        const res = await fetch('/api/admin/collections');
        const collections = await res.json();

        const grid = document.getElementById('collectionsGrid');
        grid.innerHTML = collections.map(col => {
          const hasAttachments = collectionsWithAttachments.includes(col.name);
          const exportButtons = hasAttachments
            ? `<button class="btn btn-sm btn-info" onclick="exportCollection('${col.name}', false)">Export</button>
               <button class="btn btn-sm btn-info" onclick="exportCollection('${col.name}', true)" title="Include attachment files">Export + Files</button>`
            : `<button class="btn btn-sm btn-info" onclick="exportCollection('${col.name}', false)">Export JSON</button>`;

          return `
            <div class="collection-card">
              <div class="collection-header">
                <span class="collection-name">${col.name}</span>
                <span class="collection-count">${col.count.toLocaleString()}</span>
              </div>
              ${hasAttachments ? '<div style="font-size: 0.75rem; color: var(--text-muted); margin-bottom: 0.5rem;">Supports file attachments</div>' : ''}
              <div class="collection-actions">
                ${exportButtons}
                <button class="btn btn-sm btn-secondary" onclick="openImportModal('${col.name}')">
                  Import
                </button>
                <button class="btn btn-sm btn-danger" onclick="clearCollection('${col.name}')" ${col.count === 0 ? 'disabled' : ''}>
                  Clear
                </button>
              </div>
            </div>
          `;
        }).join('');
      } catch (error) {
        console.error('Failed to load collections:', error);
        document.getElementById('collectionsGrid').innerHTML = '<p class="error">Failed to load collections</p>';
      }
    }

    function formatBytes(bytes) {
      if (bytes === 0) return '0 B';
      const k = 1024;
      const sizes = ['B', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
    }

    function exportCollection(name, includeAttachments = false) {
      let url = `/api/admin/export/${name}`;
      if (includeAttachments) {
        url += '?includeAttachments=true';
      }
      window.location.href = url;
    }

    function openImportModal(name) {
      document.getElementById('importCollection').value = name;
      document.getElementById('importModalTitle').textContent = `Import to ${name}`;
      document.getElementById('jsonFileInput').value = '';
      document.getElementById('fileSelected').style.display = 'none';
      document.getElementById('doImportBtn').disabled = true;
      document.getElementById('clearExisting').checked = false;
      document.getElementById('preserveIds').checked = false;
      selectedFile = null;
      parsedData = null;
      document.getElementById('importModal').classList.remove('hidden');
    }

    function closeImportModal() {
      document.getElementById('importModal').classList.add('hidden');
    }

    function setupDragDrop() {
      const dropZone = document.getElementById('dropZone');

      dropZone.addEventListener('dragover', (e) => {
        e.preventDefault();
        dropZone.classList.add('dragover');
      });

      dropZone.addEventListener('dragleave', () => {
        dropZone.classList.remove('dragover');
      });

      dropZone.addEventListener('drop', (e) => {
        e.preventDefault();
        dropZone.classList.remove('dragover');
        const files = e.dataTransfer.files;
        if (files.length > 0 && files[0].type === 'application/json') {
          handleFile(files[0]);
        }
      });
    }

    function handleFileSelect(event) {
      const file = event.target.files[0];
      if (file) {
        handleFile(file);
      }
    }

    function handleFile(file) {
      selectedFile = file;
      const reader = new FileReader();

      reader.onload = (e) => {
        try {
          parsedData = JSON.parse(e.target.result);

          // Handle both formats: { documents: [...] } or direct array
          let docs = parsedData.documents || parsedData;
          if (!Array.isArray(docs)) {
            docs = [docs];
          }

          document.getElementById('selectedFileName').textContent = file.name;
          document.getElementById('selectedFileInfo').textContent = `${docs.length} document(s) found`;
          document.getElementById('fileSelected').style.display = 'block';
          document.getElementById('doImportBtn').disabled = false;

          // Store the documents for import
          parsedData = { documents: docs };

        } catch (error) {
          alertManager.showAlert('Invalid JSON file: ' + error.message, 'error');
          selectedFile = null;
          parsedData = null;
        }
      };

      reader.readAsText(file);
    }

    function doImport() {
      const collection = document.getElementById('importCollection').value;
      const clearExisting = document.getElementById('clearExisting').checked;
      const preserveIds = document.getElementById('preserveIds').checked;
      const btn = document.getElementById('doImportBtn');

      if (!parsedData || !parsedData.documents) {
        alertManager.showAlert('No valid data to import', 'warning');
        return;
      }

      if (clearExisting) {
        alertManager.showConfirm({
          title: 'Clear Existing Data',
          message: `This will DELETE all existing data in "${collection}" before importing. Continue?`,
          confirmText: 'Clear & Import',
          confirmClass: 'btn-danger',
          onConfirm: () => performImportAction(collection, clearExisting, preserveIds, btn)
        });
      } else {
        performImportAction(collection, clearExisting, preserveIds, btn);
      }
    }

    async function performImportAction(collection, clearExisting, preserveIds, btn) {
      try {
        btn.textContent = 'Importing...';
        btn.disabled = true;

        const res = await fetch(`/api/admin/import/${collection}`, {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            documents: parsedData.documents,
            clearExisting,
            preserveIds
          })
        });

        const result = await res.json();

        if (!res.ok) {
          throw new Error(result.error || 'Import failed');
        }

        alertManager.showAlert(result.message, 'success');
        closeImportModal();
        loadCollections();
        loadStats();

      } catch (error) {
        alertManager.showAlert('Import error: ' + error.message, 'error');
      } finally {
        btn.textContent = 'Import';
        btn.disabled = false;
      }
    }

    // =============================================
    // APPLICATION SETTINGS
    // =============================================
    let optionsData = [];

    async function loadSettings() {
      try {
        const res = await fetch('/api/options');
        optionsData = await res.json();
        renderSettings();
      } catch (error) {
        console.error('Failed to load settings:', error);
        document.getElementById('settingsGrid').innerHTML = '<p class="error">Failed to load settings</p>';
      }
    }

    const gripIcon = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="6" r="1"/><circle cx="15" cy="6" r="1"/><circle cx="9" cy="12" r="1"/><circle cx="15" cy="12" r="1"/><circle cx="9" cy="18" r="1"/><circle cx="15" cy="18" r="1"/></svg>';

    function renderSettings() {
      const grid = document.getElementById('settingsGrid');
      grid.innerHTML = optionsData.map(opt => {
        const rowsHtml = opt.values.map((val, idx) => `
          <tr draggable="true" data-category="${opt.category}" data-index="${idx}">
            <td class="cell-drag"><div class="drag-handle">${gripIcon}</div></td>
            <td class="cell-index">${idx + 1}</td>
            <td class="cell-value" title="${val}">${val}</td>
            <td class="cell-actions">
              <div class="actions-cell">
                <button class="option-btn" onclick="editOptionValue('${opt.category}', ${idx})" title="Edit">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M17 3a2.828 2.828 0 114 4L7.5 20.5 2 22l1.5-5.5L17 3z"/>
                  </svg>
                </button>
                <button class="option-btn danger" onclick="removeOptionValue('${opt.category}', ${idx})" title="Remove">
                  <svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                    <path d="M18 6L6 18M6 6l12 12"/>
                  </svg>
                </button>
              </div>
            </td>
          </tr>
        `).join('');

        return `
          <div class="option-table-card">
            <div class="option-table-header">
              <span class="option-table-title">${opt.label}</span>
              <span class="option-table-count">${opt.values.length}</span>
            </div>
            <div class="option-table-wrapper">
              <table class="option-table" data-category="${opt.category}">
                <thead>
                  <tr>
                    <th class="col-drag">${gripIcon}</th>
                    <th class="col-index">#</th>
                    <th>Value</th>
                    <th class="col-actions">Actions</th>
                  </tr>
                </thead>
                <tbody>${rowsHtml}</tbody>
              </table>
            </div>
            <div class="option-table-footer">
              <input type="text" id="addInput-${opt.category}" placeholder="Add new value..." onkeydown="if(event.key==='Enter') addOptionValue('${opt.category}')">
              <button class="btn btn-sm btn-info" onclick="addOptionValue('${opt.category}')">Add</button>
            </div>
          </div>
        `;
      }).join('');

      setupOptionDragDrop();
    }

    // =============================================
    // DRAG AND DROP
    // =============================================
    let draggedRow = null;
    let draggedCategory = null;
    let draggedIndex = -1;

    function setupOptionDragDrop() {
      document.querySelectorAll('.option-table tbody tr[draggable="true"]').forEach(row => {
        row.addEventListener('dragstart', handleOptionDragStart);
        row.addEventListener('dragover', handleOptionDragOver);
        row.addEventListener('dragenter', handleOptionDragEnter);
        row.addEventListener('dragleave', handleOptionDragLeave);
        row.addEventListener('drop', handleOptionDrop);
        row.addEventListener('dragend', handleOptionDragEnd);
      });
    }

    function handleOptionDragStart(e) {
      draggedRow = e.target.closest('tr');
      draggedCategory = draggedRow.dataset.category;
      draggedIndex = parseInt(draggedRow.dataset.index);
      draggedRow.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
      e.dataTransfer.setData('text/plain', draggedIndex.toString());
    }

    function handleOptionDragOver(e) {
      e.preventDefault();
      e.dataTransfer.dropEffect = 'move';
    }

    function handleOptionDragEnter(e) {
      const row = e.target.closest('tr');
      if (row && row !== draggedRow && row.dataset.category === draggedCategory) {
        row.classList.add('drag-over');
      }
    }

    function handleOptionDragLeave(e) {
      const row = e.target.closest('tr');
      if (row) {
        row.classList.remove('drag-over');
      }
    }

    function handleOptionDrop(e) {
      e.preventDefault();
      const targetRow = e.target.closest('tr');
      if (!targetRow || targetRow === draggedRow) {
        if (targetRow) targetRow.classList.remove('drag-over');
        return;
      }

      const targetCategory = targetRow.dataset.category;
      const targetIndex = parseInt(targetRow.dataset.index);

      if (draggedCategory !== targetCategory || draggedIndex === targetIndex) {
        targetRow.classList.remove('drag-over');
        return;
      }

      const opt = getOptionData(draggedCategory);
      if (!opt) return;

      const newValues = [...opt.values];
      const [moved] = newValues.splice(draggedIndex, 1);
      newValues.splice(targetIndex, 0, moved);

      targetRow.classList.remove('drag-over');
      saveOptionValues(draggedCategory, newValues);
    }

    function handleOptionDragEnd() {
      if (draggedRow) {
        draggedRow.classList.remove('dragging');
      }
      document.querySelectorAll('.option-table tbody tr').forEach(row => {
        row.classList.remove('drag-over');
      });
      draggedRow = null;
      draggedCategory = null;
      draggedIndex = -1;
    }

    // =============================================
    // OPTION CRUD
    // =============================================
    function getOptionData(category) {
      return optionsData.find(o => o.category === category);
    }

    async function saveOptionValues(category, values) {
      try {
        const res = await fetch(`/api/options/${category}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ values })
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        const updated = await res.json();
        const idx = optionsData.findIndex(o => o.category === category);
        if (idx !== -1) optionsData[idx] = updated;

        renderSettings();
      } catch (error) {
        alertManager.showAlert('Failed to save: ' + error.message, 'error');
      }
    }

    function addOptionValue(category) {
      const input = document.getElementById(`addInput-${category}`);
      const value = input.value.trim();
      if (!value) return;

      const opt = getOptionData(category);
      if (!opt) return;

      if (opt.values.includes(value)) {
        alertManager.showAlert('This value already exists', 'warning');
        return;
      }

      const newValues = [...opt.values, value];
      input.value = '';
      saveOptionValues(category, newValues);
    }

    function removeOptionValue(category, index) {
      const opt = getOptionData(category);
      if (!opt) return;

      if (opt.values.length <= 1) {
        alertManager.showAlert('Cannot remove the last value', 'warning');
        return;
      }

      const valueName = opt.values[index];
      alertManager.showConfirm({
        title: 'Remove Value',
        message: `Remove "${valueName}" from ${opt.label}?`,
        confirmText: 'Remove',
        confirmClass: 'btn-danger',
        onConfirm: () => {
          const newValues = opt.values.filter((_, i) => i !== index);
          saveOptionValues(category, newValues);
        }
      });
    }

    function editOptionValue(category, index) {
      const opt = getOptionData(category);
      if (!opt) return;

      const row = document.querySelector(`tr[data-category="${category}"][data-index="${index}"]`);
      if (!row) return;

      const cell = row.querySelector('.cell-value');
      const currentValue = opt.values[index];

      const input = document.createElement('input');
      input.type = 'text';
      input.value = currentValue;
      input.className = 'option-value-edit';

      const finishEdit = () => {
        const newValue = input.value.trim();
        if (newValue && newValue !== currentValue) {
          if (opt.values.includes(newValue)) {
            alertManager.showAlert('This value already exists', 'warning');
            renderSettings();
            return;
          }
          const newValues = [...opt.values];
          newValues[index] = newValue;
          saveOptionValues(category, newValues);
        } else {
          renderSettings();
        }
      };

      input.addEventListener('blur', finishEdit);
      input.addEventListener('keydown', (e) => {
        if (e.key === 'Enter') { e.preventDefault(); input.blur(); }
        if (e.key === 'Escape') { input.value = currentValue; input.blur(); }
      });

      cell.textContent = '';
      cell.appendChild(input);
      input.focus();
      input.select();
    }

    function clearCollection(name) {
      alertManager.showConfirm({
        title: 'Delete Collection',
        message: `Are you sure you want to delete ALL documents in "${name}"? This cannot be undone.`,
        confirmText: 'Delete All',
        confirmClass: 'btn-danger',
        onConfirm: () => {
          alertManager.showConfirm({
            title: 'Final Confirmation',
            message: `Final confirmation: Delete everything in "${name}"?`,
            confirmText: 'Yes, Delete All',
            confirmClass: 'btn-danger',
            onConfirm: async () => {
              try {
                const res = await fetch(`/api/admin/collections/${name}`, {
                  method: 'DELETE'
                });

                const result = await res.json();

                if (!res.ok) {
                  throw new Error(result.error || 'Delete failed');
                }

                alertManager.showAlert(result.message, 'success');
                loadCollections();
                loadStats();

              } catch (error) {
                alertManager.showAlert('Error: ' + error.message, 'error');
              }
            }
          });
        }
      });
    }
  </script>
