  <!-- Add/Edit Task Modal -->
  <div id="taskModal" class="modal modal-managertask hidden">
    <div class="modal-content">
      <div class="modal-header">
        <h2 id="modalTitle">Add Manager Task</h2>
        <button class="modal-close" onclick="closeModal()">&times;</button>
      </div>
      <div class="modal-body">
        <form id="taskForm">
          <input type="hidden" id="taskId">
          <div class="modal-grid-layout">
            <div class="modal-col-left">
              <div class="form-group">
                <label for="taskRustId">Rust ID (Optional)</label>
                <input type="text" id="taskRustId" placeholder="e.g., RUST-123">
              </div>
              <div class="form-group">
                <label for="taskApplication">Application *</label>
                <select id="taskApplication" required>
                  <option value="">Select application...</option>
                  <option value="ASD Manager">ASD Manager</option>
                  <option value="CARMS">CARMS</option>
                  <option value="RSRS">RSRS</option>
                  <option value="namelessApp">namelessApp</option>
                  <option value="DESI">DESI</option>
                  <option value="DNN">DNN</option>
                  <option value="MailgunAPI">MailgunAPI</option>
                  <option value="Portal">Portal</option>
                  <option value="SmartScan">SmartScan</option>
                  <option value="SmartKey">SmartKey</option>
                  <option value="WebApp">WebApp</option>
                  <option value="Process">Process</option>
                  <option value="Administrative">Administrative</option>
                  <option value="Other">Other</option>
                </select>
              </div>
              <div class="form-group">
                <label for="taskRelease">Release</label>
                <input type="text" id="taskRelease" placeholder="e.g., v2.1.0">
              </div>
              <div class="form-group">
                <label for="taskStatus">Status</label>
                <select id="taskStatus">
                  <option value="Not Started">Not Started</option>
                  <option value="In Progress">In Progress</option>
                  <option value="Closed">Closed</option>
                </select>
              </div>
              <div class="form-group">
                <label>Quality Measure</label>
                <div class="quality-stars">
                  <button type="button" class="quality-star" data-value="1">1</button>
                  <button type="button" class="quality-star" data-value="2">2</button>
                  <button type="button" class="quality-star" data-value="3">3</button>
                  <button type="button" class="quality-star" data-value="4">4</button>
                  <button type="button" class="quality-star" data-value="5">5</button>
                </div>
                <input type="hidden" id="taskQuality">
              </div>
            </div>
            <div class="modal-col-right">
              <div class="form-group">
                <label for="taskDescription">Description *</label>
                <textarea id="taskDescription" required placeholder="Describe the task..." style="min-height: 240px; resize: vertical;"></textarea>
              </div>
            </div>
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button class="btn btn-secondary" onclick="closeModal()">Cancel</button>
        <button class="btn btn-info" onclick="saveTask()">Save Task</button>
      </div>
    </div>
  </div>

  <main class="container">
    <div class="dashboard">
      <div class="page-header">
        <h1>Manager Tasks</h1>
        <button class="btn btn-info" onclick="openAddModal()">Add Task</button>
      </div>

      <!-- Loading State -->
      <div id="loadingState">
        <div class="skeleton-table">
          <div class="skeleton-row" style="background: var(--surface-tertiary);">
            <div class="skeleton-cell medium" style="background: transparent;"></div>
            <div class="skeleton-cell medium" style="background: transparent;"></div>
            <div class="skeleton-cell title" style="background: transparent;"></div>
            <div class="skeleton-cell small" style="background: transparent;"></div>
            <div class="skeleton-cell small" style="background: transparent;"></div>
            <div class="skeleton-cell actions" style="background: transparent;"></div>
          </div>
          <div class="skeleton-row"><div class="skeleton-cell medium"></div><div class="skeleton-cell medium"></div><div class="skeleton-cell title"></div><div class="skeleton-cell small"></div><div class="skeleton-cell small"></div><div class="skeleton-cell actions"></div></div>
          <div class="skeleton-row"><div class="skeleton-cell medium"></div><div class="skeleton-cell medium"></div><div class="skeleton-cell title"></div><div class="skeleton-cell small"></div><div class="skeleton-cell small"></div><div class="skeleton-cell actions"></div></div>
          <div class="skeleton-row"><div class="skeleton-cell medium"></div><div class="skeleton-cell medium"></div><div class="skeleton-cell title"></div><div class="skeleton-cell small"></div><div class="skeleton-cell small"></div><div class="skeleton-cell actions"></div></div>
          <div class="skeleton-row"><div class="skeleton-cell medium"></div><div class="skeleton-cell medium"></div><div class="skeleton-cell title"></div><div class="skeleton-cell small"></div><div class="skeleton-cell small"></div><div class="skeleton-cell actions"></div></div>
          <div class="skeleton-row"><div class="skeleton-cell medium"></div><div class="skeleton-cell medium"></div><div class="skeleton-cell title"></div><div class="skeleton-cell small"></div><div class="skeleton-cell small"></div><div class="skeleton-cell actions"></div></div>
        </div>
      </div>

      <!-- Main Content -->
      <div id="mainContent" style="display: none;">
        <!-- Search Bar -->
        <div class="search-toolbar">
          <div class="search-bar">
            <input type="text" id="searchInput" placeholder="Search tasks...">
          </div>
        </div>

        <!-- Collapsible Filter Accordion -->
        <div class="filter-accordion" id="filterAccordion">
          <div class="filter-accordion-header" onclick="toggleFilterAccordion()">
            <div class="filter-accordion-title">
              <svg class="filter-accordion-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="6 9 12 15 18 9"></polyline>
              </svg>
              <span>Filters</span>
            </div>
            <span class="filter-accordion-badge" id="activeFilterCount">0</span>
          </div>
          <div class="filter-accordion-content">
            <!-- Status Filters -->
            <div class="filter-section">
              <div class="filter-section-label">Status</div>
              <div class="filters">
                <button class="filter-btn active" data-status="all">All</button>
                <button class="filter-btn" data-status="Not Started">Not Started</button>
                <button class="filter-btn" data-status="In Progress">In Progress</button>
                <button class="filter-btn" data-status="Closed">Closed</button>
              </div>
            </div>

            <!-- Application Filters -->
            <div class="filter-section">
              <div class="filter-section-label">Application</div>
              <div class="app-filter-chips" id="appChips">
                <button class="app-chip active" data-app="all">All Apps</button>
              </div>
            </div>
          </div>
        </div>

        <!-- Tasks Table -->
        <div class="recent-tasks">
          <table class="data-table">
            <thead>
              <tr>
                <th class="sortable" data-sort="rustId">Rust ID</th>
                <th class="sortable" data-sort="application">Application</th>
                <th class="sortable" data-sort="description">Description</th>
                <th class="sortable" data-sort="status">Status</th>
                <th class="sortable" data-sort="qualityMeasure">Quality</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody id="tasksTable">
            </tbody>
          </table>
          <div class="pagination" id="pagination"></div>
        </div>
      </div>

      <!-- Empty State -->
      <div id="emptyState" class="empty-state" style="display: none;">
        <h3>No Manager Tasks Yet</h3>
        <p>Start tracking your manager tasks by adding your first one.</p>
        <button class="btn btn-info" onclick="openAddModal()">Add First Task</button>
      </div>
    </div>
  </main>

  <script src="/js/app.js"></script>
  <script>
    let currentPage = 1;
    let currentStatus = 'all';
    let currentApp = 'all';
    let currentSearch = '';
    let sortField = 'createdAt';
    let sortOrder = 'desc';
    let selectedQuality = null;

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadTasks();
      loadAppChips();
      setupEventListeners();
    });

    // Toggle filter accordion
    function toggleFilterAccordion() {
      const accordion = document.getElementById('filterAccordion');
      accordion.classList.toggle('open');
    }

    // Update active filter count badge
    function updateFilterCount() {
      let count = 0;
      if (currentStatus !== 'all') count++;
      if (currentApp !== 'all') count++;
      document.getElementById('activeFilterCount').textContent = count;
    }

    function setupEventListeners() {
      // Status filter buttons
      document.querySelectorAll('.filter-btn[data-status]').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.filter-btn[data-status]').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentStatus = btn.dataset.status;
          currentPage = 1;
          updateFilterCount();
          loadTasks();
        });
      });

      // Search
      let searchTimeout;
      document.getElementById('searchInput').addEventListener('input', (e) => {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => {
          currentSearch = e.target.value;
          currentPage = 1;
          loadTasks();
        }, 300);
      });

      // Sort headers
      document.querySelectorAll('.data-table th.sortable').forEach(th => {
        th.addEventListener('click', () => {
          const field = th.dataset.sort;
          if (sortField === field) {
            sortOrder = sortOrder === 'asc' ? 'desc' : 'asc';
          } else {
            sortField = field;
            sortOrder = 'desc';
          }
          document.querySelectorAll('.data-table th.sortable').forEach(h => h.classList.remove('active'));
          th.classList.add('active');
          loadTasks();
        });
      });

      // Quality stars
      document.querySelectorAll('.quality-star').forEach(star => {
        star.addEventListener('click', (e) => {
          e.preventDefault();
          const value = parseInt(star.dataset.value);

          // Toggle off if clicking same value
          if (selectedQuality === value) {
            selectedQuality = null;
            document.querySelectorAll('.quality-star').forEach(s => s.classList.remove('active'));
          } else {
            selectedQuality = value;
            document.querySelectorAll('.quality-star').forEach(s => s.classList.remove('active'));
            star.classList.add('active');
          }
          document.getElementById('taskQuality').value = selectedQuality || '';
        });
      });
    }

    async function loadAppChips() {
      try {
        const res = await fetch('/api/managertasks/applications');
        const apps = await res.json();

        const container = document.getElementById('appChips');
        let html = '<button class="app-chip active" data-app="all">All Apps</button>';

        apps.forEach(app => {
          html += `<button class="app-chip" data-app="${app}">${app}</button>`;
        });

        container.innerHTML = html;

        // Add event listeners to new chips
        container.querySelectorAll('.app-chip').forEach(chip => {
          chip.addEventListener('click', () => {
            container.querySelectorAll('.app-chip').forEach(c => c.classList.remove('active'));
            chip.classList.add('active');
            currentApp = chip.dataset.app;
            currentPage = 1;
            updateFilterCount();
            loadTasks();
          });
        });
      } catch (error) {
        console.error('Failed to load applications:', error);
      }
    }

    async function loadTasks() {
      const params = new URLSearchParams({
        page: currentPage,
        limit: 25,
        sortField,
        sortOrder
      });

      if (currentStatus !== 'all') params.set('status', currentStatus);
      if (currentApp !== 'all') params.set('application', currentApp);
      if (currentSearch) params.set('search', currentSearch);

      try {
        const res = await fetch(`/api/managertasks?${params}`);
        const data = await res.json();

        document.getElementById('loadingState').style.display = 'none';

        if (data.pagination.total === 0 && currentStatus === 'all' && currentApp === 'all' && !currentSearch) {
          document.getElementById('emptyState').style.display = 'block';
          document.getElementById('mainContent').style.display = 'none';
        } else {
          document.getElementById('emptyState').style.display = 'none';
          document.getElementById('mainContent').style.display = 'block';
          renderTasksTable(data.tasks);
          renderPagination(data.pagination);
        }
      } catch (error) {
        console.error('Failed to load tasks:', error);
        document.getElementById('loadingState').innerHTML = '<p class="error">Failed to load tasks</p>';
      }
    }

    function getStatusBadgeClass(status) {
      switch (status) {
        case 'Not Started': return 'warning';
        case 'In Progress': return 'info';
        case 'Closed': return 'success';
        default: return 'info';
      }
    }

    function renderTasksTable(tasks) {
      const tbody = document.getElementById('tasksTable');

      if (tasks.length === 0) {
        tbody.innerHTML = '<tr><td colspan="6" style="text-align:center;color:var(--text-muted);">No tasks found</td></tr>';
        return;
      }

      tbody.innerHTML = tasks.map(t => {
        const description = t.description.length > 60 ? t.description.substring(0, 60) + '...' : t.description;
        const quality = t.qualityMeasure || '-';
        const rustId = t.rustId || '-';

        return `
          <tr>
            <td><strong>${rustId}</strong></td>
            <td><span class="badge info">${t.application}</span></td>
            <td class="truncate">${description}</td>
            <td><span class="badge ${getStatusBadgeClass(t.status)}">${t.status}</span></td>
            <td>${quality}</td>
            <td>
              <button class="btn btn-sm btn-secondary" onclick="editTask('${t._id}')">Edit</button>
              <button class="btn btn-sm btn-danger" onclick="deleteTask('${t._id}')">Delete</button>
            </td>
          </tr>
        `;
      }).join('');
    }

    function renderPagination(pagination) {
      const container = document.getElementById('pagination');
      if (pagination.pages <= 1) {
        container.innerHTML = '';
        return;
      }

      let html = '';
      for (let i = 1; i <= pagination.pages; i++) {
        html += `<a href="#" class="page-link ${i === pagination.page ? 'active' : ''}" onclick="goToPage(${i}); return false;">${i}</a>`;
      }
      container.innerHTML = html;
    }

    function goToPage(page) {
      currentPage = page;
      loadTasks();
    }

    // Modal functions
    async function openAddModal() {
      document.getElementById('modalTitle').textContent = 'Add Manager Task';
      document.getElementById('taskForm').reset();
      document.getElementById('taskId').value = '';
      selectedQuality = null;
      document.querySelectorAll('.quality-star').forEach(s => s.classList.remove('active'));

      // Calculate next available Rust ID
      try {
        const res = await fetch('/api/managertasks?limit=1000');
        const data = await res.json();

        // Extract numeric values from all Rust IDs
        const numbers = data.tasks
          .map(t => t.rustId)
          .filter(id => id)
          .map(id => {
            // Extract numbers from the Rust ID (handles "123", "RUST-123", etc.)
            const match = id.match(/(\d+)/);
            return match ? parseInt(match[1], 10) : 0;
          })
          .filter(n => !isNaN(n));

        const maxNumber = numbers.length > 0 ? Math.max(...numbers) : 0;
        document.getElementById('taskRustId').value = maxNumber + 1;
      } catch (error) {
        console.error('Failed to calculate next Rust ID:', error);
      }

      document.getElementById('taskModal').classList.remove('hidden');
    }

    async function editTask(id) {
      try {
        const res = await fetch(`/api/managertasks/${id}`);
        const task = await res.json();

        document.getElementById('modalTitle').textContent = 'Edit Manager Task';
        document.getElementById('taskId').value = task._id;
        document.getElementById('taskRustId').value = task.rustId || '';
        document.getElementById('taskApplication').value = task.application;
        document.getElementById('taskDescription').value = task.description;
        document.getElementById('taskRelease').value = task.release || '';
        document.getElementById('taskStatus').value = task.status;

        // Set quality
        selectedQuality = task.qualityMeasure;
        document.getElementById('taskQuality').value = selectedQuality || '';
        document.querySelectorAll('.quality-star').forEach(s => {
          s.classList.toggle('active', parseInt(s.dataset.value) === selectedQuality);
        });

        document.getElementById('taskModal').classList.remove('hidden');
      } catch (error) {
        alert('Failed to load task: ' + error.message);
      }
    }

    function closeModal() {
      document.getElementById('taskModal').classList.add('hidden');
    }

    async function saveTask() {
      const id = document.getElementById('taskId').value;
      const data = {
        rustId: document.getElementById('taskRustId').value,
        application: document.getElementById('taskApplication').value,
        description: document.getElementById('taskDescription').value,
        release: document.getElementById('taskRelease').value,
        status: document.getElementById('taskStatus').value,
        qualityMeasure: document.getElementById('taskQuality').value || null
      };

      if (!data.application) {
        alert('Please select an application');
        return;
      }
      if (!data.description) {
        alert('Please enter a description');
        return;
      }

      try {
        const url = id ? `/api/managertasks/${id}` : '/api/managertasks';
        const method = id ? 'PUT' : 'POST';

        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        closeModal();
        loadTasks();
      } catch (error) {
        alert('Failed to save task: ' + error.message);
      }
    }

    async function deleteTask(id) {
      if (!confirm('Are you sure you want to delete this task?')) return;

      try {
        const res = await fetch(`/api/managertasks/${id}`, { method: 'DELETE' });
        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        loadTasks();
      } catch (error) {
        alert('Failed to delete task: ' + error.message);
      }
    }
  </script>
