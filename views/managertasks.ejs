  <script>
    let currentPage = 1;
    let currentStatus = 'all';
    let currentApp = 'all';
    let sortField = 'createdAt';
    let sortOrder = 'desc';
    let selectedQuality = null;

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadFormOptions();
      loadTasks();
      loadAppChips();
      setupEventListeners();
    });

    async function loadFormOptions() {
      try {
        const [appsRes, statusesRes] = await Promise.all([
          fetch('/api/options/applications'),
          fetch('/api/options/taskStatuses')
        ]);
        const appsData = await appsRes.json();
        const statusesData = await statusesRes.json();

        const appSelect = document.getElementById('taskApplication');
        appSelect.innerHTML = '<option value="">Select application...</option>' +
          appsData.values.map(v => `<option value="${v}">${v}</option>`).join('');

        const statusSelect = document.getElementById('taskStatus');
        statusSelect.innerHTML = statusesData.values.map(v => `<option value="${v}">${v}</option>`).join('');
      } catch (error) {
        console.error('Failed to load form options:', error);
      }
    }

    function setupEventListeners() {
      // Status filter buttons
      document.querySelectorAll('.filter-btn[data-status]').forEach(btn => {
        btn.addEventListener('click', () => {
          document.querySelectorAll('.filter-btn[data-status]').forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentStatus = btn.dataset.status;
          currentPage = 1;
          loadTasks();
        });
      });

      // Sort headers
      document.querySelectorAll('.data-table th.sortable').forEach(th => {
        th.addEventListener('click', () => {
          const field = th.dataset.sort;
          if (sortField === field) {
            sortOrder = sortOrder === 'asc' ? 'desc' : 'asc';
          } else {
            sortField = field;
            sortOrder = 'desc';
          }
          document.querySelectorAll('.data-table th.sortable').forEach(h => h.classList.remove('active'));
          th.classList.add('active');
          loadTasks();
        });
      });

      // Quality stars
      document.querySelectorAll('.quality-star').forEach(star => {
        star.addEventListener('click', (e) => {
          e.preventDefault();
          const value = parseInt(star.dataset.value);

          // Toggle off if clicking same value
          if (selectedQuality === value) {
            selectedQuality = null;
            document.querySelectorAll('.quality-star').forEach(s => s.classList.remove('active'));
          } else {
            selectedQuality = value;
            document.querySelectorAll('.quality-star').forEach(s => s.classList.remove('active'));
            star.classList.add('active');
          }
          document.getElementById('taskQuality').value = selectedQuality || '';
        });
      });
    }

    async function loadAppChips() {
      try {
        const res = await fetch('/api/managertasks/applications');
        const apps = await res.json();

        const container = document.getElementById('appChips');
        let html = '<button class="app-chip active" data-app="all">All Apps</button>';

        apps.forEach(app => {
          html += `<button class="app-chip" data-app="${app}">${app}</button>`;
        });

        container.innerHTML = html;

        // Add event listeners to new chips
        container.querySelectorAll('.app-chip').forEach(chip => {
          chip.addEventListener('click', () => {
            container.querySelectorAll('.app-chip').forEach(c => c.classList.remove('active'));
            chip.classList.add('active');
            currentApp = chip.dataset.app;
            currentPage = 1;
            loadTasks();
          });
        });
      } catch (error) {
        console.error('Failed to load applications:', error);
      }
    }

    async function loadTasks() {
      const params = new URLSearchParams({
        page: currentPage,
        limit: 25,
        sortField,
        sortOrder
      });

      if (currentStatus !== 'all') params.set('status', currentStatus);
      if (currentApp !== 'all') params.set('application', currentApp);

      try {
        const res = await fetch(`/api/managertasks?${params}`);
        const data = await res.json();

        document.getElementById('loadingState').style.display = 'none';

        if (data.pagination.total === 0 && currentStatus === 'all' && currentApp === 'all') {
          document.getElementById('emptyState').style.display = 'block';
          document.getElementById('mainContent').style.display = 'none';
        } else {
          document.getElementById('emptyState').style.display = 'none';
          document.getElementById('mainContent').style.display = 'block';
          renderTasksTable(data.tasks);
          renderPagination(data.pagination);
        }
      } catch (error) {
        console.error('Failed to load tasks:', error);
        document.getElementById('loadingState').innerHTML = '<p class="error">Failed to load tasks</p>';
      }
    }

    function getStatusBadgeClass(status) {
      switch (status) {
        case 'Not Started': return 'warning';
        case 'In Progress': return 'info';
        case 'Closed': return 'success';
        default: return 'info';
      }
    }

    function renderTasksTable(tasks) {
      const tbody = document.getElementById('tasksTable');

      if (tasks.length === 0) {
        tbody.innerHTML = '<tr><td colspan="7" style="text-align:center;color:var(--text-muted);">No tasks found</td></tr>';
        return;
      }

      tbody.innerHTML = tasks.map(t => {
        const description = t.description.length > 60 ? t.description.substring(0, 60) + '...' : t.description;
        const qm = t.qualityMeasure;
        const qualityBtns = [3, 4, 5].map(v =>
          `<button class="quality-inline-btn${qm === v ? ' active' : ''}" onclick="event.stopPropagation(); setQuickQuality('${t._id}', ${v})">${v}</button>`
        ).join('');
        const quality = `<div class="quality-inline">${qualityBtns}</div>`;
        const rustId = t.rustId || '-';
        const date = t.date ? new Date(t.date).toLocaleDateString() : '-';
        const attachCount = t.attachments ? t.attachments.length : 0;
        const attachIcon = attachCount > 0 ? `<span class="attach-indicator" title="${attachCount} attachment(s)"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21.44 11.05l-9.19 9.19a6 6 0 01-8.49-8.49l9.19-9.19a4 4 0 015.66 5.66l-9.2 9.19a2 2 0 01-2.83-2.83l8.49-8.48"/></svg>${attachCount}</span>` : '';

        return `
          <tr>
            <td><strong>${rustId}</strong></td>
            <td>${date}</td>
            <td><span class="badge info">${t.application}</span></td>
            <td class="truncate">${description} ${attachIcon}</td>
            <td><span class="badge ${getStatusBadgeClass(t.status)}">${t.status}</span></td>
            <td>${quality}</td>
            <td>
              <button class="btn btn-sm btn-secondary" onclick="editTask('${t._id}')">Edit</button>
              <button class="btn btn-sm btn-danger" onclick="deleteTask('${t._id}')">Delete</button>
            </td>
          </tr>
        `;
      }).join('');
    }

    function renderPagination(pagination) {
      const container = document.getElementById('pagination');
      if (pagination.pages <= 1) {
        container.innerHTML = '';
        return;
      }

      let html = '';
      for (let i = 1; i <= pagination.pages; i++) {
        html += `<a href="#" class="page-link ${i === pagination.page ? 'active' : ''}" onclick="goToPage(${i}); return false;">${i}</a>`;
      }
      container.innerHTML = html;
    }

    function goToPage(page) {
      currentPage = page;
      loadTasks();
    }

    // Modal functions
    async function openAddModal() {
      document.getElementById('modalTitle').textContent = 'Add Manager Task';
      document.getElementById('taskForm').reset();
      document.getElementById('taskId').value = '';
      selectedQuality = null;
      document.querySelectorAll('.quality-star').forEach(s => s.classList.remove('active'));

      // Show note for new tasks (can't upload until saved)
      document.getElementById('attachmentControls').style.display = 'none';
      document.getElementById('attachmentsList').style.display = 'none';
      document.getElementById('newTaskAttachmentNote').style.display = 'block';
      currentAttachments = [];

      // Calculate next available Rust ID
      try {
        const res = await fetch('/api/managertasks?limit=1000');
        const data = await res.json();

        // Extract numeric values from all Rust IDs
        const numbers = data.tasks
          .map(t => t.rustId)
          .filter(id => id)
          .map(id => {
            // Extract numbers from the Rust ID (handles "123", "RUST-123", etc.)
            const match = id.match(/(\d+)/);
            return match ? parseInt(match[1], 10) : 0;
          })
          .filter(n => !isNaN(n));

        const maxNumber = numbers.length > 0 ? Math.max(...numbers) : 0;
        document.getElementById('taskRustId').value = maxNumber + 1;
      } catch (error) {
        console.error('Failed to calculate next Rust ID:', error);
      }

      document.getElementById('taskModal').classList.remove('hidden');
    }

    async function setQuickQuality(id, score) {
      try {
        const res = await fetch(`/api/managertasks/${id}`, {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ qualityMeasure: score })
        });
        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }
        loadTasks();
      } catch (error) {
        alertManager.showAlert('Failed to update quality: ' + error.message, 'error');
      }
    }

    async function editTask(id) {
      try {
        const res = await fetch(`/api/managertasks/${id}`);
        const task = await res.json();

        document.getElementById('modalTitle').textContent = 'Edit Manager Task';
        document.getElementById('taskId').value = task._id;
        document.getElementById('taskRustId').value = task.rustId || '';
        document.getElementById('taskDate').value = task.date ? task.date.substring(0, 10) : '';
        document.getElementById('taskApplication').value = task.application;
        document.getElementById('taskDescription').value = task.description;
        document.getElementById('taskRelease').value = task.release || '';
        document.getElementById('taskStatus').value = task.status;

        // Set quality
        selectedQuality = task.qualityMeasure;
        document.getElementById('taskQuality').value = selectedQuality || '';
        document.querySelectorAll('.quality-star').forEach(s => {
          s.classList.toggle('active', parseInt(s.dataset.value) === selectedQuality);
        });

        // Show attachments section and load attachments
        document.getElementById('attachmentControls').style.display = 'block';
        document.getElementById('attachmentsList').style.display = 'flex';
        document.getElementById('newTaskAttachmentNote').style.display = 'none';
        currentAttachments = task.attachments || [];
        renderAttachments();

        document.getElementById('taskModal').classList.remove('hidden');
      } catch (error) {
        alertManager.showAlert('Failed to load task: ' + error.message, 'error');
      }
    }

    function closeModal() {
      document.getElementById('taskModal').classList.add('hidden');
    }

    async function saveTask() {
      const id = document.getElementById('taskId').value;
      const data = {
        rustId: document.getElementById('taskRustId').value,
        date: document.getElementById('taskDate').value || null,
        application: document.getElementById('taskApplication').value,
        description: document.getElementById('taskDescription').value,
        release: document.getElementById('taskRelease').value,
        status: document.getElementById('taskStatus').value,
        qualityMeasure: document.getElementById('taskQuality').value || null
      };

      if (!data.application) {
        alertManager.showAlert('Please select an application', 'warning');
        return;
      }
      if (!data.description) {
        alertManager.showAlert('Please enter a description', 'warning');
        return;
      }

      try {
        const url = id ? `/api/managertasks/${id}` : '/api/managertasks';
        const method = id ? 'PUT' : 'POST';

        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        closeModal();
        loadTasks();
      } catch (error) {
        alertManager.showAlert('Failed to save task: ' + error.message, 'error');
      }
    }

    function deleteTask(id) {
      alertManager.showConfirm({
        title: 'Delete Task',
        message: 'Are you sure you want to delete this task?',
        confirmText: 'Delete',
        confirmClass: 'btn-danger',
        onConfirm: async () => {
          try {
            const res = await fetch(`/api/managertasks/${id}`, { method: 'DELETE' });
            if (!res.ok) {
              const error = await res.json();
              throw new Error(error.error);
            }
            loadTasks();
          } catch (error) {
            alertManager.showAlert('Failed to delete task: ' + error.message, 'error');
          }
        }
      });
    }

    // File attachment functions
    let currentAttachments = [];

    // Setup file input listener
    document.getElementById('fileInput').addEventListener('change', async function(e) {
      const taskId = document.getElementById('taskId').value;
      if (!taskId) return;

      const files = e.target.files;
      if (files.length === 0) return;

      await uploadFiles(taskId, files);
      e.target.value = ''; // Reset input
    });

    async function uploadFiles(taskId, files) {
      const progressDiv = document.getElementById('uploadProgress');
      const progressFill = progressDiv.querySelector('.progress-fill');
      const progressText = progressDiv.querySelector('.progress-text');

      progressDiv.style.display = 'flex';
      progressFill.style.width = '0%';
      progressText.textContent = 'Uploading...';

      const formData = new FormData();
      for (let i = 0; i < files.length; i++) {
        formData.append('files', files[i]);
      }

      try {
        const res = await fetch(`/api/managertasks/${taskId}/attachments`, {
          method: 'POST',
          body: formData
        });

        progressFill.style.width = '100%';

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        const data = await res.json();
        progressText.textContent = `Uploaded ${files.length} file(s)`;

        // Refresh attachments list
        currentAttachments = data.attachments;
        renderAttachments();

        setTimeout(() => {
          progressDiv.style.display = 'none';
        }, 1500);

      } catch (error) {
        progressText.textContent = 'Upload failed: ' + error.message;
        progressFill.style.background = 'var(--status-danger)';

        setTimeout(() => {
          progressDiv.style.display = 'none';
          progressFill.style.background = 'var(--brand-secondary)';
        }, 3000);
      }
    }

    function renderAttachments() {
      const list = document.getElementById('attachmentsList');
      const taskId = document.getElementById('taskId').value;

      if (!currentAttachments || currentAttachments.length === 0) {
        list.innerHTML = '<span class="no-attachments">No attachments</span>';
        return;
      }

      list.innerHTML = currentAttachments.map(att => {
        const size = formatFileSize(att.size);
        const icon = getFileIcon(att.mimetype);

        return `
          <div class="attachment-item">
            <div class="attachment-info">
              ${icon}
              <span class="attachment-name" title="${att.originalName}">${att.originalName}</span>
              <span class="attachment-size">(${size})</span>
            </div>
            <div class="attachment-actions">
              <button type="button" class="btn btn-sm btn-info" onclick="downloadAttachment('${taskId}', '${att._id}', '${att.originalName}')">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M7 10l5 5 5-5M12 15V3"/>
                </svg>
              </button>
              <button type="button" class="btn btn-sm btn-danger" onclick="deleteAttachment('${taskId}', '${att._id}')">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 6L6 18M6 6l12 12"/>
                </svg>
              </button>
            </div>
          </div>
        `;
      }).join('');
    }

    function formatFileSize(bytes) {
      if (!bytes) return '0 B';
      const k = 1024;
      const sizes = ['B', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
    }

    function getFileIcon(mimetype) {
      const iconClass = 'attachment-icon';
      if (!mimetype) {
        return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>`;
      }

      if (mimetype.startsWith('image/')) {
        return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>`;
      }

      if (mimetype === 'application/pdf') {
        return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/></svg>`;
      }

      return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>`;
    }

    function downloadAttachment(taskId, attachmentId, filename) {
      const link = document.createElement('a');
      link.href = `/api/managertasks/${taskId}/attachments/${attachmentId}`;
      link.download = filename;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }

    function deleteAttachment(taskId, attachmentId) {
      alertManager.showConfirm({
        title: 'Delete Attachment',
        message: 'Are you sure you want to delete this attachment?',
        confirmText: 'Delete',
        confirmClass: 'btn-danger',
        onConfirm: async () => {
          try {
            const res = await fetch(`/api/managertasks/${taskId}/attachments/${attachmentId}`, {
              method: 'DELETE'
            });

            if (!res.ok) {
              const error = await res.json();
              throw new Error(error.error);
            }

            const data = await res.json();
            currentAttachments = data.attachments;
            renderAttachments();
          } catch (error) {
            alertManager.showAlert('Failed to delete attachment: ' + error.message, 'error');
          }
        }
      });
    }
  </script>
