<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://unpkg.com/lenis@1.1.13/dist/lenis.min.js"></script>
  <script>
    (function() {
      const saved = localStorage.getItem('theme');
      if (saved) {
        document.documentElement.setAttribute('data-theme', saved);
      } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    })();
  </script>
  <style>
    /* Wide Modal with Two-Column Layout */
    .modal-managertask .modal-content {
      max-width: 700px;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.15),
        0 0 50px rgba(5, 113, 150, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
    }

    [data-theme="dark"] .modal-managertask .modal-content {
      background: rgba(30, 41, 59, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.4),
        0 0 60px rgba(61, 142, 179, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .modal-managertask .modal-header {
      background: linear-gradient(135deg, var(--brand-secondary) 0%, var(--brand-secondary-dark) 100%);
      color: white;
      border-radius: var(--radius-xl) var(--radius-xl) 0 0;
      padding: var(--space-5) var(--space-6);
    }

    .modal-managertask .modal-header h2 {
      color: white;
    }

    .modal-managertask .modal-close {
      color: rgba(255, 255, 255, 0.8);
    }

    .modal-managertask .modal-close:hover {
      color: white;
      background: rgba(255, 255, 255, 0.15);
    }

    /* Form inputs glow on focus */
    .modal-managertask input:focus,
    .modal-managertask select:focus,
    .modal-managertask textarea:focus {
      box-shadow:
        0 0 0 3px rgba(5, 113, 150, 0.15),
        0 0 20px rgba(5, 113, 150, 0.1);
    }

    [data-theme="dark"] .modal-managertask input:focus,
    [data-theme="dark"] .modal-managertask select:focus,
    [data-theme="dark"] .modal-managertask textarea:focus {
      box-shadow:
        0 0 0 3px rgba(61, 142, 179, 0.2),
        0 0 25px rgba(61, 142, 179, 0.15);
    }

    /* Quality Stars */
    .quality-stars {
      display: flex;
      gap: var(--space-2);
      margin-top: var(--space-2);
    }

    .quality-star {
      width: 32px;
      height: 32px;
      border: 2px solid var(--border-default);
      border-radius: var(--radius-md);
      background: var(--surface-primary);
      cursor: pointer;
      font-size: var(--font-size-base);
      font-weight: 600;
      color: var(--text-secondary);
      transition: all var(--transition-fast);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .quality-star:hover {
      border-color: var(--brand-secondary);
      color: var(--brand-secondary);
      transform: scale(1.05);
    }

    .quality-star.active {
      background: var(--brand-secondary);
      border-color: var(--brand-secondary);
      color: white;
      box-shadow: 0 0 15px rgba(5, 113, 150, 0.3);
    }

    [data-theme="dark"] .quality-star.active {
      box-shadow: 0 0 20px rgba(61, 142, 179, 0.4);
    }

    /* Accordion Filter Panel */
    .filter-accordion {
      margin-bottom: var(--space-4);
    }

    .filter-accordion-header {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--space-3) var(--space-4);
      background: rgba(255, 255, 255, 0.5);
      backdrop-filter: blur(12px);
      -webkit-backdrop-filter: blur(12px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      border-radius: var(--radius-lg);
      cursor: pointer;
      transition: all var(--transition-fast);
      user-select: none;
    }

    [data-theme="dark"] .filter-accordion-header {
      background: rgba(30, 41, 59, 0.5);
      border: 1px solid rgba(148, 163, 184, 0.1);
    }

    .filter-accordion-header:hover {
      background: rgba(255, 255, 255, 0.65);
      border-color: var(--brand-secondary);
    }

    [data-theme="dark"] .filter-accordion-header:hover {
      background: rgba(30, 41, 59, 0.65);
    }

    .filter-accordion-title {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      font-size: var(--font-size-sm);
      font-weight: 600;
      color: var(--text-secondary);
    }

    .filter-accordion-icon {
      width: 20px;
      height: 20px;
      display: flex;
      align-items: center;
      justify-content: center;
      transition: transform var(--transition-fast);
    }

    .filter-accordion.open .filter-accordion-icon {
      transform: rotate(180deg);
    }

    .filter-accordion-badge {
      background: var(--brand-secondary);
      color: white;
      padding: var(--space-1) var(--space-2);
      border-radius: var(--radius-full);
      font-size: var(--font-size-xs);
      font-weight: 600;
      min-width: 20px;
      text-align: center;
    }

    .filter-accordion-content {
      max-height: 0;
      overflow: hidden;
      transition: max-height 0.3s ease-out, padding 0.3s ease-out;
      background: rgba(255, 255, 255, 0.4);
      backdrop-filter: blur(10px);
      -webkit-backdrop-filter: blur(10px);
      border: 1px solid rgba(255, 255, 255, 0.2);
      border-top: none;
      border-radius: 0 0 var(--radius-lg) var(--radius-lg);
      margin-top: -1px;
    }

    [data-theme="dark"] .filter-accordion-content {
      background: rgba(30, 41, 59, 0.4);
      border: 1px solid rgba(148, 163, 184, 0.08);
      border-top: none;
    }

    .filter-accordion.open .filter-accordion-content {
      max-height: 300px;
      padding: var(--space-4);
    }

    .filter-accordion.open .filter-accordion-header {
      border-radius: var(--radius-lg) var(--radius-lg) 0 0;
    }

    .filter-section {
      margin-bottom: var(--space-4);
    }

    .filter-section:last-child {
      margin-bottom: 0;
    }

    .filter-section-label {
      font-size: var(--font-size-xs);
      font-weight: 600;
      color: var(--text-tertiary);
      text-transform: uppercase;
      letter-spacing: 0.05em;
      margin-bottom: var(--space-2);
    }

    /* Application filter chips */
    .app-filter-chips {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-2);
    }

    .app-chip {
      padding: var(--space-1) var(--space-3);
      background: var(--surface-primary);
      border: 1px solid var(--border-default);
      border-radius: var(--radius-full);
      color: var(--text-secondary);
      font-size: var(--font-size-xs);
      font-weight: 500;
      cursor: pointer;
      transition: all var(--transition-fast);
    }

    .app-chip:hover {
      border-color: var(--brand-secondary);
      color: var(--brand-secondary);
    }

    .app-chip.active {
      background: var(--brand-secondary);
      border-color: var(--brand-secondary);
      color: white;
      box-shadow: 0 0 10px rgba(5, 113, 150, 0.2);
    }

    [data-theme="dark"] .app-chip.active {
      box-shadow: 0 0 12px rgba(61, 142, 179, 0.3);
    }

    /* Search toolbar */
    .search-toolbar {
      display: flex;
      justify-content: space-between;
      align-items: center;
      gap: var(--space-4);
      margin-bottom: var(--space-4);
    }

    .search-toolbar .search-bar {
      flex: 1;
      max-width: 400px;
    }
  </style>
</head>
<body>
  <nav class="navbar">
    <div class="navbar-brand">
      <a href="/">ASD Time Tracker</a>
    </div>
    <div class="navbar-menu">
      <a href="/" class="nav-link">Dashboard</a>
      <a href="/tasks" class="nav-link">Tasks</a>
      <a href="/scorecard" class="nav-link">Scorecard</a>
      <a href="/meetings" class="nav-link">Meetings</a>
