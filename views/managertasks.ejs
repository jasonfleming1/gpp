<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://unpkg.com/lenis@1.1.13/dist/lenis.min.js"></script>
  <script>
    (function() {
      const saved = localStorage.getItem('theme');
      if (saved) {
        document.documentElement.setAttribute('data-theme', saved);
      } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    })();
  </script>
  <style>
    /* Manager Task Modal - Matches ASD Task Modal Design */
    .modal-managertask .modal-content {
      max-width: 800px;
      width: 95%;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.15),
        0 0 50px rgba(5, 113, 150, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
    }

    [data-theme="dark"] .modal-managertask .modal-content {
      background: rgba(30, 41, 59, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.4),
        0 0 60px rgba(61, 142, 179, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .modal-managertask .modal-header {
      background: linear-gradient(135deg, var(--brand-secondary) 0%, var(--brand-secondary-dark) 100%);
      color: white;
      border-radius: var(--radius-xl) var(--radius-xl) 0 0;
      padding: var(--space-4) var(--space-6);
    }

    .modal-managertask .modal-header h2 {
      color: white;
      margin: 0;
      font-size: 1.25rem;
    }

    .modal-managertask .modal-close {
      color: rgba(255, 255, 255, 0.8);
    }

    .modal-managertask .modal-close:hover {
      color: white;
      background: rgba(255, 255, 255, 0.15);
    }

    /* Two-column grid layout */
    .task-modal-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-6);
    }

    .task-modal-left {
      display: flex;
      flex-direction: column;
      gap: var(--space-3);
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-4);
    }

    .form-row .form-group {
      margin-bottom: 0;
    }

    /* Right panel with shaded background */
    .task-modal-right {
      display: flex;
      flex-direction: column;
      background: var(--surface-secondary);
      border-radius: var(--radius-lg);
      padding: var(--space-4);
      border: 1px solid var(--border-default);
    }

    [data-theme="dark"] .task-modal-right {
      background: rgba(0, 0, 0, 0.2);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .task-modal-right .form-group {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .task-modal-right textarea {
      flex: 1;
      min-height: 120px;
      resize: vertical;
    }

    /* Form inputs glow on focus */
    .modal-managertask input:focus,
    .modal-managertask select:focus,
    .modal-managertask textarea:focus {
      box-shadow:
        0 0 0 3px rgba(5, 113, 150, 0.15),
        0 0 20px rgba(5, 113, 150, 0.1);
    }

    [data-theme="dark"] .modal-managertask input:focus,
    [data-theme="dark"] .modal-managertask select:focus,
    [data-theme="dark"] .modal-managertask textarea:focus {
      box-shadow:
        0 0 0 3px rgba(61, 142, 179, 0.2),
        0 0 25px rgba(61, 142, 179, 0.15);
    }

    /* Quality Stars */
    .quality-stars {
      display: flex;
      gap: var(--space-2);
      margin-top: var(--space-1);
    }

    .quality-star {
      width: 28px;
      height: 28px;
      border: 2px solid var(--border-default);
      border-radius: var(--radius-md);
      background: var(--surface-primary);
      cursor: pointer;
      font-size: var(--font-size-sm);
      font-weight: 600;
      color: var(--text-secondary);
      transition: all var(--transition-fast);
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .quality-star:hover {
      border-color: var(--brand-secondary);
      color: var(--brand-secondary);
      transform: scale(1.05);
    }

    .quality-star.active {
      background: var(--brand-secondary);
      border-color: var(--brand-secondary);
      color: white;
      box-shadow: 0 0 15px rgba(5, 113, 150, 0.3);
    }

    [data-theme="dark"] .quality-star.active {
      box-shadow: 0 0 20px rgba(61, 142, 179, 0.4);
    }

    /* Inline Quality Buttons (table) */
    .quality-inline {
      display: flex;
      gap: 4px;
      align-items: center;
    }

    .quality-inline-btn {
      width: 24px;
      height: 24px;
      border: 1.5px solid var(--border-default);
      border-radius: var(--radius-sm);
      background: var(--surface-primary);
      cursor: pointer;
      font-size: 11px;
      font-weight: 600;
      color: var(--text-secondary);
      transition: all var(--transition-fast);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 0;
    }

    .quality-inline-btn:hover {
      border-color: var(--brand-secondary);
      color: var(--brand-secondary);
      transform: scale(1.1);
    }

    .quality-inline-btn.active {
      background: var(--brand-secondary);
      border-color: var(--brand-secondary);
      color: white;
      box-shadow: 0 0 8px rgba(5, 113, 150, 0.3);
    }

    [data-theme="dark"] .quality-inline-btn.active {
      box-shadow: 0 0 12px rgba(61, 142, 179, 0.4);
    }

    /* Date Input Theme Support */
    input[type="date"] {
      color-scheme: light;
    }

    [data-theme="dark"] input[type="date"] {
      color-scheme: dark;
    }

    input[type="date"]::-webkit-calendar-picker-indicator {
      filter: none;
      opacity: 0.7;
      cursor: pointer;
    }

    [data-theme="dark"] input[type="date"]::-webkit-calendar-picker-indicator {
      filter: invert(1);
    }

    @media (max-width: 700px) {
      .task-modal-grid {
        grid-template-columns: 1fr;
      }
      .task-modal-right {
        max-height: 250px;
      }
      .modal-managertask .modal-content {
        max-width: 95%;
      }
    }

    /* Filter Toolbar */
    .filter-toolbar {
      display: flex;
      align-items: center;
      justify-content: space-between;
      gap: var(--space-4);
      margin-bottom: var(--space-3);
    }

    .filter-toolbar-actions {
      display: flex;
      gap: var(--space-2);
    }

    /* Application filter chips */
    .app-filter-chips {
      display: flex;
      flex-wrap: wrap;
      gap: var(--space-2);
      margin-bottom: var(--space-4);
    }

    .app-chip {
      padding: var(--space-1) var(--space-3);
      background: var(--surface-primary);
      border: 1px solid var(--border-default);
      border-radius: var(--radius-full);
      color: var(--text-secondary);
      font-size: var(--font-size-xs);
      font-weight: 500;
      cursor: pointer;
      transition: all var(--transition-fast);
    }

    .app-chip:hover {
      border-color: var(--brand-secondary);
      color: var(--brand-secondary);
    }

    .app-chip.active {
      background: var(--brand-secondary);
      border-color: var(--brand-secondary);
      color: white;
      box-shadow: 0 0 10px rgba(5, 113, 150, 0.2);
    }

    [data-theme="dark"] .app-chip.active {
      box-shadow: 0 0 12px rgba(61, 142, 179, 0.3);
    }

    /* Attachments Section */
    .attachments-section {
      margin-top: var(--space-3);
      padding-top: var(--space-3);
      border-top: 1px solid var(--border-default);
    }

    .attachments-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-2);
    }

    .attachments-header label {
      font-weight: 600;
      font-size: var(--font-size-sm);
      color: var(--text-primary);
    }

    .file-upload-wrapper {
      position: relative;
    }

    .file-upload-wrapper input[type="file"] {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }

    .file-upload-wrapper .btn {
      display: flex;
      align-items: center;
      gap: var(--space-1);
    }

    .attachments-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-2);
      max-height: 100px;
      overflow-y: auto;
    }

    .no-attachments {
      color: var(--text-muted);
      font-size: var(--font-size-sm);
      font-style: italic;
    }

    .attachment-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--space-2) var(--space-3);
      background: var(--surface-secondary);
      border: 1px solid var(--border-default);
      border-radius: var(--radius-md);
      font-size: var(--font-size-sm);
    }

    .attachment-info {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      overflow: hidden;
    }

    .attachment-icon {
      flex-shrink: 0;
      width: 20px;
      height: 20px;
      color: var(--text-secondary);
    }

    .attachment-name {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      max-width: 300px;
    }

    .attachment-size {
      color: var(--text-muted);
      font-size: var(--font-size-xs);
      flex-shrink: 0;
    }

    .attachment-actions {
      display: flex;
      gap: var(--space-1);
      flex-shrink: 0;
    }

    .attachment-actions .btn {
      padding: var(--space-1) var(--space-2);
    }

    .upload-progress {
      margin-top: var(--space-2);
      display: flex;
      align-items: center;
      gap: var(--space-2);
    }

    .progress-bar {
      flex: 1;
      height: 6px;
      background: var(--surface-tertiary);
      border-radius: var(--radius-full);
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      background: var(--brand-secondary);
      width: 0%;
      transition: width 0.3s ease;
    }

    .progress-text {
      font-size: var(--font-size-xs);
      color: var(--text-secondary);
    }

    /* Attachment indicator in table */
    .attach-indicator {
      display: inline-flex;
      align-items: center;
      gap: 2px;
      margin-left: var(--space-2);
      color: var(--text-muted);
      font-size: var(--font-size-xs);
      vertical-align: middle;
    }

    .attach-indicator svg {
      color: var(--brand-secondary);
    }
  </style>
</head>
