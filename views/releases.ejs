  <script>
    let currentPage = 1;
    let sortField = 'sortOrder';
    let sortOrder = 'asc';
    let currentReleases = [];

    const gripIcon = '<svg width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="9" cy="6" r="1"/><circle cx="15" cy="6" r="1"/><circle cx="9" cy="12" r="1"/><circle cx="15" cy="12" r="1"/><circle cx="9" cy="18" r="1"/><circle cx="15" cy="18" r="1"/></svg>';

    // Drag state
    let draggedRow = null;
    let draggedIndex = -1;

    // Initialize
    document.addEventListener('DOMContentLoaded', () => {
      loadFormOptions();
      loadReleases();
      setupEventListeners();
    });

    async function loadFormOptions() {
      try {
        const res = await fetch('/api/options/applications');
        const data = await res.json();

        const select = document.getElementById('releaseApplication');
        select.innerHTML = '<option value="">Select...</option>' +
          data.values.map(v => `<option value="${v}">${v}</option>`).join('');
      } catch (error) {
        console.error('Failed to load form options:', error);
      }
    }

    function setupEventListeners() {
      // Sort headers
      document.querySelectorAll('.data-table th.sortable').forEach(th => {
        th.addEventListener('click', () => {
          const field = th.dataset.sort;
          if (sortField === field) {
            sortOrder = sortOrder === 'asc' ? 'desc' : 'asc';
          } else {
            sortField = field;
            sortOrder = 'asc';
          }
          document.querySelectorAll('.data-table th.sortable').forEach(h => h.classList.remove('active'));
          th.classList.add('active');
          loadReleases();
        });
      });
    }

    async function loadReleases() {
      const params = new URLSearchParams({
        page: currentPage,
        limit: 25,
        sortField,
        sortOrder
      });

      try {
        const res = await fetch(`/api/releases?${params}`);
        const data = await res.json();

        document.getElementById('loadingState').style.display = 'none';

        if (data.pagination.total === 0) {
          document.getElementById('emptyState').style.display = 'block';
          document.getElementById('mainContent').style.display = 'none';
        } else {
          document.getElementById('emptyState').style.display = 'none';
          document.getElementById('mainContent').style.display = 'block';
          renderReleasesTable(data.releases);
          renderPagination(data.pagination);
        }
      } catch (error) {
        console.error('Failed to load releases:', error);
        document.getElementById('loadingState').innerHTML = '<p class="error">Failed to load releases</p>';
      }
    }

    function renderReleasesTable(releases) {
      currentReleases = releases;
      const tbody = document.getElementById('releasesTable');

      if (releases.length === 0) {
        tbody.innerHTML = '<tr><td colspan="8" style="text-align:center;color:var(--text-muted);">No releases found</td></tr>';
        return;
      }

      tbody.innerHTML = releases.map((r, idx) => {
        const notes = r.notes ? (r.notes.length > 40 ? r.notes.substring(0, 40) + '...' : r.notes) : '-';
        const tqa = r.tqa || '-';
        const uat = r.uat || '-';
        const prod = r.prod || '-';
        const releaseDate = r.releaseDate ? new Date(r.releaseDate).toLocaleDateString() : '-';
        const hasHistory = r.history && r.history.length > 0;
        const attachCount = r.attachments ? r.attachments.length : 0;
        const attachIcon = attachCount > 0 ? `<span class="attach-indicator" title="${attachCount} attachment(s)"><svg width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21.44 11.05l-9.19 9.19a6 6 0 01-8.49-8.49l9.19-9.19a4 4 0 015.66 5.66l-9.2 9.19a2 2 0 01-2.83-2.83l8.49-8.48"/></svg>${attachCount}</span>` : '';

        return `
          <tr draggable="true" data-id="${r._id}" data-index="${idx}">
            <td class="cell-drag"><div class="drag-handle">${gripIcon}</div></td>
            <td><span class="badge info">${r.application}</span>${attachIcon}</td>
            <td>${releaseDate}</td>
            <td class="version-cell">${tqa}</td>
            <td class="version-cell">${uat}</td>
            <td class="version-cell">${prod}</td>
            <td class="truncate">${notes}</td>
            <td>
              <button class="btn btn-sm btn-secondary" onclick="editRelease('${r._id}')">Edit</button>
              <button class="btn btn-sm btn-history" onclick="viewHistory('${r._id}')" ${hasHistory ? '' : 'disabled'} title="${hasHistory ? 'View history' : 'No history yet'}">History</button>
              <button class="btn btn-sm btn-danger" onclick="deleteRelease('${r._id}')">Delete</button>
            </td>
          </tr>
        `;
      }).join('');

      setupReleaseDragDrop();
    }

    function renderPagination(pagination) {
      const container = document.getElementById('pagination');
      if (pagination.pages <= 1) {
        container.innerHTML = '';
        return;
      }

      let html = '';
      for (let i = 1; i <= pagination.pages; i++) {
        html += `<a href="#" class="page-link ${i === pagination.page ? 'active' : ''}" onclick="goToPage(${i}); return false;">${i}</a>`;
      }
      container.innerHTML = html;
    }

    function goToPage(page) {
      currentPage = page;
      loadReleases();
    }

    // Modal functions
    let currentAttachments = [];

    function openAddModal() {
      document.getElementById('modalTitle').textContent = 'Add Release';
      document.getElementById('releaseForm').reset();
      document.getElementById('releaseId').value = '';

      // Hide attachments section for new releases
      document.getElementById('attachmentsSection').style.display = 'none';
      currentAttachments = [];

      document.getElementById('releaseModal').classList.remove('hidden');
    }

    async function editRelease(id) {
      try {
        const res = await fetch(`/api/releases/${id}`);
        const release = await res.json();

        document.getElementById('modalTitle').textContent = 'Edit Release';
        document.getElementById('releaseId').value = release._id;
        document.getElementById('releaseApplication').value = release.application;
        document.getElementById('releaseDate').value = release.releaseDate ? release.releaseDate.substring(0, 10) : '';
        document.getElementById('releaseTqa').value = release.tqa || '';
        document.getElementById('releaseUat').value = release.uat || '';
        document.getElementById('releaseProd').value = release.prod || '';
        document.getElementById('releaseNotes').value = release.notes || '';

        // Show attachments section and load attachments
        document.getElementById('attachmentsSection').style.display = 'block';
        currentAttachments = release.attachments || [];
        renderAttachments();

        document.getElementById('releaseModal').classList.remove('hidden');
      } catch (error) {
        alertManager.showAlert('Failed to load release: ' + error.message, 'error');
      }
    }

    function closeModal() {
      document.getElementById('releaseModal').classList.add('hidden');
    }

    async function saveRelease() {
      const id = document.getElementById('releaseId').value;
      const data = {
        application: document.getElementById('releaseApplication').value,
        releaseDate: document.getElementById('releaseDate').value || null,
        tqa: document.getElementById('releaseTqa').value,
        uat: document.getElementById('releaseUat').value,
        prod: document.getElementById('releaseProd').value,
        notes: document.getElementById('releaseNotes').value
      };

      if (!data.application) {
        alertManager.showAlert('Please select an application', 'warning');
        return;
      }

      try {
        const url = id ? `/api/releases/${id}` : '/api/releases';
        const method = id ? 'PUT' : 'POST';

        const res = await fetch(url, {
          method,
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify(data)
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        closeModal();
        loadReleases();
      } catch (error) {
        alertManager.showAlert('Failed to save release: ' + error.message, 'error');
      }
    }

    function deleteRelease(id) {
      alertManager.showConfirm({
        title: 'Delete Release',
        message: 'Are you sure you want to delete this release?',
        confirmText: 'Delete',
        confirmClass: 'btn-danger',
        onConfirm: async () => {
          try {
            const res = await fetch(`/api/releases/${id}`, { method: 'DELETE' });
            if (!res.ok) {
              const error = await res.json();
              throw new Error(error.error);
            }
            loadReleases();
          } catch (error) {
            alertManager.showAlert('Failed to delete release: ' + error.message, 'error');
          }
        }
      });
    }

    // History functions
    async function viewHistory(id) {
      try {
        const res = await fetch(`/api/releases/${id}/history`);
        const data = await res.json();

        document.getElementById('historyModalTitle').textContent = `History: ${data.application}`;

        const container = document.getElementById('historyContent');

        if (!data.history || data.history.length === 0) {
          container.innerHTML = '<div class="no-history">No history available</div>';
        } else {
          container.innerHTML = data.history.map(h => {
            const changedAt = new Date(h.changedAt).toLocaleString();
            const releaseDate = h.releaseDate ? new Date(h.releaseDate).toLocaleDateString() : '-';

            return `
              <div class="history-item">
                <div class="history-date">Snapshot from ${changedAt}</div>
                <div class="history-fields">
                  <div class="history-field">
                    <span class="history-field-label">Date:</span>
                    <span class="history-field-value">${releaseDate}</span>
                  </div>
                  <div class="history-field">
                    <span class="history-field-label">TQA:</span>
                    <span class="history-field-value">${h.tqa || '-'}</span>
                  </div>
                  <div class="history-field">
                    <span class="history-field-label">UAT:</span>
                    <span class="history-field-value">${h.uat || '-'}</span>
                  </div>
                  <div class="history-field">
                    <span class="history-field-label">PROD:</span>
                    <span class="history-field-value">${h.prod || '-'}</span>
                  </div>
                </div>
                ${h.notes ? `<div class="history-notes"><strong>Notes:</strong> ${h.notes}</div>` : ''}
              </div>
            `;
          }).join('');
        }

        document.getElementById('historyModal').classList.remove('hidden');
      } catch (error) {
        alertManager.showAlert('Failed to load history: ' + error.message, 'error');
      }
    }

    function closeHistoryModal() {
      document.getElementById('historyModal').classList.add('hidden');
    }

    // File attachment functions
    document.getElementById('fileInput').addEventListener('change', async function(e) {
      const releaseId = document.getElementById('releaseId').value;
      if (!releaseId) return;

      const files = e.target.files;
      if (files.length === 0) return;

      await uploadFiles(releaseId, files);
      e.target.value = ''; // Reset input
    });

    async function uploadFiles(releaseId, files) {
      const progressDiv = document.getElementById('uploadProgress');
      const progressFill = progressDiv.querySelector('.progress-fill');
      const progressText = progressDiv.querySelector('.progress-text');

      progressDiv.style.display = 'flex';
      progressFill.style.width = '0%';
      progressText.textContent = 'Uploading...';

      const formData = new FormData();
      for (let i = 0; i < files.length; i++) {
        formData.append('files', files[i]);
      }

      try {
        const res = await fetch(`/api/releases/${releaseId}/attachments`, {
          method: 'POST',
          body: formData
        });

        progressFill.style.width = '100%';

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }

        const data = await res.json();
        progressText.textContent = `Uploaded ${files.length} file(s)`;

        // Refresh attachments list
        currentAttachments = data.attachments;
        renderAttachments();

        setTimeout(() => {
          progressDiv.style.display = 'none';
        }, 1500);

      } catch (error) {
        progressText.textContent = 'Upload failed: ' + error.message;
        progressFill.style.background = 'var(--status-danger)';

        setTimeout(() => {
          progressDiv.style.display = 'none';
          progressFill.style.background = 'var(--brand-secondary)';
        }, 3000);
      }
    }

    function renderAttachments() {
      const list = document.getElementById('attachmentsList');
      const releaseId = document.getElementById('releaseId').value;

      if (!currentAttachments || currentAttachments.length === 0) {
        list.innerHTML = '<span class="no-attachments">No attachments</span>';
        return;
      }

      list.innerHTML = currentAttachments.map(att => {
        const size = formatFileSize(att.size);
        const icon = getFileIcon(att.mimetype);

        return `
          <div class="attachment-item">
            <div class="attachment-info">
              ${icon}
              <span class="attachment-name" title="${att.originalName}">${att.originalName}</span>
              <span class="attachment-size">(${size})</span>
            </div>
            <div class="attachment-actions">
              <button type="button" class="btn btn-sm btn-info" onclick="downloadAttachment('${releaseId}', '${att._id}', '${att.originalName}')">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M21 15v4a2 2 0 01-2 2H5a2 2 0 01-2-2v-4M7 10l5 5 5-5M12 15V3"/>
                </svg>
              </button>
              <button type="button" class="btn btn-sm btn-danger" onclick="deleteAttachment('${releaseId}', '${att._id}')">
                <svg width="12" height="12" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M18 6L6 18M6 6l12 12"/>
                </svg>
              </button>
            </div>
          </div>
        `;
      }).join('');
    }

    function formatFileSize(bytes) {
      if (!bytes) return '0 B';
      const k = 1024;
      const sizes = ['B', 'KB', 'MB', 'GB'];
      const i = Math.floor(Math.log(bytes) / Math.log(k));
      return parseFloat((bytes / Math.pow(k, i)).toFixed(1)) + ' ' + sizes[i];
    }

    function getFileIcon(mimetype) {
      const iconClass = 'attachment-icon';
      if (!mimetype) {
        return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>`;
      }

      if (mimetype.startsWith('image/')) {
        return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><rect x="3" y="3" width="18" height="18" rx="2" ry="2"/><circle cx="8.5" cy="8.5" r="1.5"/><polyline points="21 15 16 10 5 21"/></svg>`;
      }

      if (mimetype === 'application/pdf') {
        return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/><line x1="16" y1="13" x2="8" y2="13"/><line x1="16" y1="17" x2="8" y2="17"/></svg>`;
      }

      return `<svg class="${iconClass}" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M14 2H6a2 2 0 00-2 2v16a2 2 0 002 2h12a2 2 0 002-2V8z"/><polyline points="14 2 14 8 20 8"/></svg>`;
    }

    function downloadAttachment(releaseId, attachmentId, filename) {
      const link = document.createElement('a');
      link.href = `/api/releases/${releaseId}/attachments/${attachmentId}`;
      link.download = filename;
      document.body.appendChild(link);
      link.click();
      document.body.removeChild(link);
    }

    function deleteAttachment(releaseId, attachmentId) {
      alertManager.showConfirm({
        title: 'Delete Attachment',
        message: 'Are you sure you want to delete this attachment?',
        confirmText: 'Delete',
        confirmClass: 'btn-danger',
        onConfirm: async () => {
          try {
            const res = await fetch(`/api/releases/${releaseId}/attachments/${attachmentId}`, {
              method: 'DELETE'
            });

            if (!res.ok) {
              const error = await res.json();
              throw new Error(error.error);
            }

            const data = await res.json();
            currentAttachments = data.attachments;
            renderAttachments();
          } catch (error) {
            alertManager.showAlert('Failed to delete attachment: ' + error.message, 'error');
          }
        }
      });
    }

    // ============================================
    // DRAG-AND-DROP REORDERING
    // ============================================

    function setupReleaseDragDrop() {
      document.querySelectorAll('#releasesTable tr[draggable="true"]').forEach(row => {
        row.addEventListener('dragstart', handleDragStart);
        row.addEventListener('dragover', handleDragOver);
        row.addEventListener('dragenter', handleDragEnter);
        row.addEventListener('dragleave', handleDragLeave);
        row.addEventListener('drop', handleDrop);
        row.addEventListener('dragend', handleDragEnd);
      });
    }

    function handleDragStart(e) {
      draggedRow = e.target.closest('tr');
      draggedIndex = parseInt(draggedRow.dataset.index);
      draggedRow.classList.add('dragging');
      e.dataTransfer.effectAllowed = 'move';
      e.dataTransfer.setData('text/plain', draggedIndex.toString());
    }

    function handleDragOver(e) {
      e.preventDefault();
      e.dataTransfer.dropEffect = 'move';
    }

    function handleDragEnter(e) {
      const row = e.target.closest('tr');
      if (row && row !== draggedRow && row.hasAttribute('draggable')) {
        row.classList.add('drag-over');
      }
    }

    function handleDragLeave(e) {
      const row = e.target.closest('tr');
      if (row) {
        row.classList.remove('drag-over');
      }
    }

    function handleDrop(e) {
      e.preventDefault();
      const targetRow = e.target.closest('tr');
      if (!targetRow || targetRow === draggedRow) {
        if (targetRow) targetRow.classList.remove('drag-over');
        return;
      }

      const targetIndex = parseInt(targetRow.dataset.index);
      if (draggedIndex === targetIndex) {
        targetRow.classList.remove('drag-over');
        return;
      }

      // Reorder the local array
      const [moved] = currentReleases.splice(draggedIndex, 1);
      currentReleases.splice(targetIndex, 0, moved);

      targetRow.classList.remove('drag-over');

      // Build order payload and save
      const order = currentReleases.map((r, i) => ({ id: r._id, sortOrder: i }));
      saveReleaseOrder(order);

      // Switch to manual sort mode and re-render
      sortField = 'sortOrder';
      sortOrder = 'asc';
      renderReleasesTable(currentReleases);
    }

    function handleDragEnd() {
      if (draggedRow) {
        draggedRow.classList.remove('dragging');
      }
      document.querySelectorAll('#releasesTable tr').forEach(row => {
        row.classList.remove('drag-over');
      });
      draggedRow = null;
      draggedIndex = -1;
    }

    async function saveReleaseOrder(order) {
      try {
        const res = await fetch('/api/releases/reorder', {
          method: 'PUT',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ order })
        });

        if (!res.ok) {
          const error = await res.json();
          throw new Error(error.error);
        }
      } catch (error) {
        alertManager.showAlert('Failed to save order: ' + error.message, 'error');
        loadReleases();
      }
    }
  </script>
