<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= title %></title>
  <link rel="icon" type="image/svg+xml" href="/favicon.svg">
  <link rel="stylesheet" href="/css/style.css">
  <script src="https://unpkg.com/lenis@1.1.13/dist/lenis.min.js"></script>
  <script>
    (function() {
      const saved = localStorage.getItem('theme');
      if (saved) {
        document.documentElement.setAttribute('data-theme', saved);
      } else if (window.matchMedia('(prefers-color-scheme: dark)').matches) {
        document.documentElement.setAttribute('data-theme', 'dark');
      }
    })();
  </script>
  <style>
    /* Release Modal - Matches ASD Task Modal Design */
    .modal-release .modal-content {
      max-width: 800px;
      width: 95%;
      background: rgba(255, 255, 255, 0.95);
      backdrop-filter: blur(20px);
      -webkit-backdrop-filter: blur(20px);
      border: 1px solid rgba(255, 255, 255, 0.3);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.15),
        0 0 50px rgba(5, 113, 150, 0.1),
        inset 0 1px 0 rgba(255, 255, 255, 0.5);
    }

    [data-theme="dark"] .modal-release .modal-content {
      background: rgba(30, 41, 59, 0.95);
      border: 1px solid rgba(255, 255, 255, 0.1);
      box-shadow:
        0 25px 50px rgba(0, 0, 0, 0.4),
        0 0 60px rgba(61, 142, 179, 0.15),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
    }

    .modal-release .modal-header {
      background: linear-gradient(135deg, var(--brand-secondary) 0%, var(--brand-secondary-dark) 100%);
      color: white;
      border-radius: var(--radius-xl) var(--radius-xl) 0 0;
      padding: var(--space-4) var(--space-6);
    }

    .modal-release .modal-header h2 {
      color: white;
      margin: 0;
      font-size: 1.25rem;
    }

    .modal-release .modal-close {
      color: rgba(255, 255, 255, 0.8);
    }

    .modal-release .modal-close:hover {
      color: white;
      background: rgba(255, 255, 255, 0.15);
    }

    /* Two-column grid layout */
    .task-modal-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-6);
    }

    .task-modal-left {
      display: flex;
      flex-direction: column;
      gap: var(--space-3);
    }

    .form-row {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: var(--space-4);
    }

    .form-row .form-group {
      margin-bottom: 0;
    }

    /* Right panel with shaded background */
    .task-modal-right {
      display: flex;
      flex-direction: column;
      background: var(--surface-secondary);
      border-radius: var(--radius-lg);
      padding: var(--space-4);
      border: 1px solid var(--border-default);
    }

    [data-theme="dark"] .task-modal-right {
      background: rgba(0, 0, 0, 0.2);
      border-color: rgba(255, 255, 255, 0.1);
    }

    .task-modal-right .form-group {
      flex: 1;
      display: flex;
      flex-direction: column;
    }

    .task-modal-right textarea {
      flex: 1;
      min-height: 100px;
      resize: vertical;
    }

    /* Form inputs glow on focus */
    .modal-release input:focus,
    .modal-release select:focus,
    .modal-release textarea:focus {
      box-shadow:
        0 0 0 3px rgba(5, 113, 150, 0.15),
        0 0 20px rgba(5, 113, 150, 0.1);
    }

    [data-theme="dark"] .modal-release input:focus,
    [data-theme="dark"] .modal-release select:focus,
    [data-theme="dark"] .modal-release textarea:focus {
      box-shadow:
        0 0 0 3px rgba(61, 142, 179, 0.2),
        0 0 25px rgba(61, 142, 179, 0.15);
    }

    /* Version input styling */
    .version-input {
      font-family: monospace;
      letter-spacing: 0.05em;
    }

    /* Version cells */
    .version-cell {
      font-family: monospace;
      font-size: var(--font-size-sm);
    }

    /* Date Input Theme Support */
    input[type="date"] {
      color-scheme: light;
    }

    [data-theme="dark"] input[type="date"] {
      color-scheme: dark;
    }

    input[type="date"]::-webkit-calendar-picker-indicator {
      filter: none;
      opacity: 0.7;
      cursor: pointer;
    }

    [data-theme="dark"] input[type="date"]::-webkit-calendar-picker-indicator {
      filter: invert(1);
    }

    @media (max-width: 700px) {
      .task-modal-grid {
        grid-template-columns: 1fr;
      }
      .task-modal-right {
        max-height: 250px;
      }
      .modal-release .modal-content {
        max-width: 95%;
      }
    }

    /* History Modal */
    .modal-history .modal-content {
      max-width: 800px;
    }

    .history-list {
      max-height: 400px;
      overflow-y: auto;
    }

    .history-item {
      padding: var(--space-4);
      border: 1px solid var(--border-default);
      border-radius: var(--radius-md);
      margin-bottom: var(--space-3);
      background: var(--surface-secondary);
    }

    .history-item:last-child {
      margin-bottom: 0;
    }

    .history-date {
      font-size: var(--font-size-sm);
      color: var(--text-tertiary);
      margin-bottom: var(--space-2);
      font-weight: 600;
    }

    .history-fields {
      display: grid;
      grid-template-columns: repeat(2, 1fr);
      gap: var(--space-2);
      font-size: var(--font-size-sm);
    }

    .history-field {
      display: flex;
      gap: var(--space-2);
    }

    .history-field-label {
      color: var(--text-tertiary);
      min-width: 80px;
    }

    .history-field-value {
      color: var(--text-primary);
      font-family: monospace;
    }

    .history-notes {
      margin-top: var(--space-2);
      padding-top: var(--space-2);
      border-top: 1px solid var(--border-default);
      font-size: var(--font-size-sm);
      color: var(--text-secondary);
    }

    .no-history {
      text-align: center;
      color: var(--text-muted);
      padding: var(--space-6);
    }

    .btn-history {
      background: var(--brand-secondary);
      border-color: var(--brand-secondary);
      color: white;
    }

    .btn-history:hover:not(:disabled) {
      background: var(--brand-secondary-dark);
      border-color: var(--brand-secondary-dark);
      color: white;
    }

    .btn-history:disabled {
      background: var(--surface-secondary);
      border-color: var(--border-default);
      color: var(--text-muted);
      opacity: 0.6;
      cursor: not-allowed;
    }

    /* Attachments Section */
    .attachments-section {
      margin-top: var(--space-3);
      padding-top: var(--space-3);
      border-top: 1px solid var(--border-default);
    }

    .attachments-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: var(--space-2);
    }

    .attachments-header label {
      font-weight: 600;
      font-size: var(--font-size-sm);
      color: var(--text-primary);
    }

    .file-upload-wrapper {
      position: relative;
    }

    .file-upload-wrapper input[type="file"] {
      position: absolute;
      opacity: 0;
      width: 0;
      height: 0;
    }

    .file-upload-wrapper .btn {
      display: flex;
      align-items: center;
      gap: var(--space-1);
    }

    .attachments-list {
      display: flex;
      flex-direction: column;
      gap: var(--space-2);
      max-height: 100px;
      overflow-y: auto;
    }

    .no-attachments {
      color: var(--text-muted);
      font-size: var(--font-size-sm);
      font-style: italic;
    }

    .attachment-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: var(--space-2) var(--space-3);
      background: var(--surface-secondary);
      border: 1px solid var(--border-default);
      border-radius: var(--radius-md);
      font-size: var(--font-size-sm);
    }

    .attachment-info {
      display: flex;
      align-items: center;
      gap: var(--space-2);
      overflow: hidden;
    }

    .attachment-icon {
      flex-shrink: 0;
      width: 20px;
      height: 20px;
      color: var(--text-secondary);
    }

    .attachment-name {
      overflow: hidden;
      text-overflow: ellipsis;
      white-space: nowrap;
      max-width: 300px;
    }

    .attachment-size {
      color: var(--text-muted);
      font-size: var(--font-size-xs);
      flex-shrink: 0;
    }

    .attachment-actions {
      display: flex;
      gap: var(--space-1);
      flex-shrink: 0;
    }

    .attachment-actions .btn {
      padding: var(--space-1) var(--space-2);
    }

    .upload-progress {
      margin-top: var(--space-2);
      display: flex;
      align-items: center;
      gap: var(--space-2);
    }

    .progress-bar {
      flex: 1;
      height: 6px;
      background: var(--surface-tertiary);
      border-radius: var(--radius-full);
      overflow: hidden;
    }

    .progress-fill {
      height: 100%;
      background: var(--brand-secondary);
      width: 0%;
      transition: width 0.3s ease;
    }

    .progress-text {
      font-size: var(--font-size-xs);
      color: var(--text-secondary);
    }

    /* Attachment indicator in table */
    .attach-indicator {
      display: inline-flex;
      align-items: center;
      gap: 2px;
      margin-left: var(--space-2);
      color: var(--text-muted);
      font-size: var(--font-size-xs);
      vertical-align: middle;
    }

    .attach-indicator svg {
      color: var(--brand-secondary);
    }

    /* Drag handle column */
    .data-table th.col-drag,
    .data-table td.cell-drag {
      width: 36px;
      min-width: 36px;
      max-width: 36px;
      text-align: center;
      padding: 0.375rem 0.25rem;
    }

    .data-table td.cell-drag {
      cursor: grab;
    }

    .data-table td.cell-drag:active {
      cursor: grabbing;
    }

    .drag-handle {
      display: flex;
      align-items: center;
      justify-content: center;
    }

    .drag-handle svg {
      opacity: 0.2;
      transition: opacity 0.15s ease;
      width: 16px;
      height: 16px;
      color: var(--text-muted);
    }

    .data-table tbody tr:hover .drag-handle svg {
      opacity: 0.6;
    }

    .data-table tbody tr.dragging {
      opacity: 0.4;
      background: rgba(5, 113, 150, 0.05);
    }

    .data-table tbody tr.drag-over {
      box-shadow: inset 0 -2px 0 0 var(--brand-secondary);
    }
  </style>
</head>
